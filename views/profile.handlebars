<div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2">
        <h2>Welcome, {{name}}</h2>

        <h3>Create a new bid </h3>
        <form class="login-form" action="/login" method="POST">
            <div>
                <label for="bid-name">Bid Name: </label>
              <input type="name" id="name" name="name"
                required>
            </div>
            <div>
                <label for="bid-description">Description: </label>
                <input type="description" id="description" name="description"
                required>
            </div>
            <div>
                <label for="bid-price">Price:</label>
                <input type="price" id="price" name="price"
                required>
            </div>
            <!-- Button to submit form-->
            <button class="btnCreate" type="submit">Create</button>
        </form>
    </div>

    <div class="pure-u-1 pure-u-md-1-2">
        <h3>My Bids </h3>
        {{#if bids.length}}
        {{#each bids as |bid|}}
        <h4><a href="/bid/{{bid.id}}">{{bid.name}}</a></h4>
        {{/each}}
        {{/if}}
    </div>
</div>

<script src="/js/profile.js"></script>


